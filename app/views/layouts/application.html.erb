<!DOCTYPE html>
<html>
  <head>
    <title>PfPorts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <div class="row">
          <div class="col-7">
            <h1>ポートフォリオの港</h1>
          </div>
          <div class="col-5 text-right">
            <% if user_signed_in? %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "log-menu-content" %>
            <% else %>
              <%= link_to 'ログイン', new_user_session_path, class: "log-menu-content-new" %>
              <%= link_to '新規ユーザー登録', new_user_registration_path, class: "log-menu-content-new" %>
            <% end %>
          </div>
        </div>
      </header>
    </div>

    <hr>

      <main>
        <%= yield %>
      </main>
    
    <hr>
    <div class="container">
      <footer>
        <p>&copy;INIWA TAKAYA</p>
      </footer>
    </div>
  </body>
</html>
